<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hypertech.ysm99admin.jh_highschool.Files">

    <Button
        android:text="이전 화면으로 돌아가기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/filesback"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="지필평가 시간표 [2017년 1학기 1차 지필]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/files1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/files2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="false" />

    <TextView
        android:text="학습자료실 및 방과후학교신청입니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewinfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/filesback" />

    <Button
        android:text="방과후학교 홈페이지 접속"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/files1"
        android:layout_below="@+id/textViewinfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="지필평가 1학년 시험범위 [2017년 1학기 1차 지필]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/files2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/files3"
        android:enabled="false" />

    <Button
        android:text="지필평가 2학년 시험범위 [2017년 1학기 1차 지필]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/files4"
        android:layout_below="@+id/files3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <Button
        android:text="지필평가 3학년 시험범위 [2017년 1학기 1차 지필]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/files5"
        android:layout_below="@+id/files4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <TextView
        android:text='현재 학습자료실 및 방과후학교신청 기능은 일부 기능만 제공되고 있습니다. 추후 업데이트를 통해 추가할 예정입니다.     =>지필평가 시험범위 및 시간표는 최신의(단, 정보가 학교홈피에 올라오지 않은 경우는 그 전의 시험정보가 게시됩니다.) 시험관련 정보만 표기됩니다. 이전에 실시된 시험에 대한 정보를 원하시면 "메인화면>제작자>학교홈페이지 접속" 을 통해 학교홈피를 이용해주세요.'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewinfo2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

